<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TomApp.GamePage"
             Title="Jeu">
    <StackLayout Padding="20">
        <Image x:Name="FlagImage" Aspect="AspectFit"/>
        <Entry x:Name="CountryNameEntry" Placeholder="Entrez le nom du pays"/>
        <Button Text="Vérifier" Clicked="OnCheckButtonClicked"/>
        <Label x:Name="ResultLabel"/>
        <Button Text="Indice" Clicked="OnHintButtonClicked"/>
    </StackLayout>
</ContentPage>