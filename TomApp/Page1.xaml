<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TomApp.Page1"
             Title="Page1">
    <ScrollView>
        <VerticalStackLayout>
            <Label Text="Bienvenue sur la Page1 !" FontSize="Large" HorizontalOptions="Center" />
            <Label Text="Ici débute le projet MAUI !" FontSize="Medium" HorizontalOptions="Center" />
            <CarouselView x:Name="CarouselImages" ItemsSource="{Binding images}" Loop="True" PeekAreaInsets="50" HorizontalOptions="FillAndExpand" HeightRequest="200">
                <CarouselView.ItemTemplate>
                    <DataTemplate>
                        <Image Source="{Binding .}" Aspect="AspectFill"/>
                    </DataTemplate>
                </CarouselView.ItemTemplate>
            </CarouselView>
            <Button Text="Ouvrir la page GIF" Clicked="OnButtonClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>