<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TomApp.Page1"
             Title="Page1">
    <ScrollView>
        <VerticalStackLayout Spacing="20">
            <Label Text="Bienvenue sur C-Guess !" FontSize="Large" HorizontalOptions="Center" />
            <Label Text="Ici débute l'application sur les pays" FontSize="Medium" HorizontalOptions="Center" />

            <CarouselView x:Name="CarouselImages" ItemsSource="{Binding images}" Loop="True" PeekAreaInsets="50" HorizontalOptions="FillAndExpand" HeightRequest="200">
                <CarouselView.ItemTemplate>
                    <DataTemplate>
                        <Image Source="{Binding .}" Aspect="AspectFill"/>
                    </DataTemplate>
                </CarouselView.ItemTemplate>
            </CarouselView>
            <Button Text="Ouvrir la page GIF" Clicked="OnButtonClicked"/>
            <HorizontalStackLayout Spacing="10">
                <Image Source="imgcarrousel1.jpeg" Aspect="AspectFill" WidthRequest="100" HeightRequest="100"/>
                <Image Source="imgcarrousel2.jpeg" Aspect="AspectFill" WidthRequest="100" HeightRequest="100"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>